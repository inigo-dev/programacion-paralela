<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= stylesheet_link_tag    "backend", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= viewport_meta_tag(:maximum_scale => "1.0") %>
    <%= csrf_meta_tags %>
    <%= include_gon %>
    <%= yield :head %>
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top hidden-print">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <%= link_to 'logo', admin_root_url, :class => 'brand' %>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li><%= link_to 'Posts', admin_posts_url %></li>
              <li><%= link_to 'Tags', admin_tags_url %></li>
              <li><%= link_to 'Referencias', admin_references_url %></li>
              <li><%= link_to 'Administradores', admin_admins_url %></li>
            </ul>
            <ul class="nav pull-right">              
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= @current_admin.full_name %>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to 'Salir', admin_splash_logout_url %>
                  </li>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>   
    
    <div class="container">
      <div class="space-top">
        <%= bootstrap_flash %>
      </div>
      <%= render_breadcrumbs %>      
      <%= yield %>
    </div>  

  </body>
</html>
