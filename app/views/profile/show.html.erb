<div class="leaderboard">
  <div class="container">
    <div class="pull-left">
      <%= image_tag @user.profile_picture_url, :class => 'profile-picture-large' %>
    </div>
    <div class="user-names pull-left space-left">      
      <h2><%= @user.full_name %></h2>
      <p class="nickname"><%= @user.nickname %></p>
    </div>
    <div class="clearfix"></div>  
  </div>  
</div>
<div class="inner-nav">
  <div class="container">
    <%= link_to 'Posts', '#', :class => 'tab' %>
    <%= link_to 'Canales', '#', :class => 'tab' %>
    <%= link_to 'Informaci&oacute;n'.html_safe, '#', :class => 'tab' %>
  </div>
</div>
<div class="container">
  <% if @current_user.id.eql? @user.id %> 
    <div class="text-right space-top">
      <%= link_to new_post_url, :class => 'btn btn-primary' do %>
        Agregar <i class="icon-pencil"></i>
      <% end %>
    </div>
  <% end %>
  <div id="posts-container">
    <% if @user.posts.any? %>
      <div class="row">
        <% @user.posts.each do |post| %>
          <%= render partial: 'shared/post_item',locals: { post: post } %>
        <% end %>
      </div>   
    <% else %>
      <p class="well space-top">
        A&uacute;n no has agregado posts 
      </p> 
    <% end %>
  </div>
</div>

