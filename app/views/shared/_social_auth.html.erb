<p class="well">
  <%= link_to social_login_url(provider: 'github', url: request.original_url), :class => 'btn btn-large btn-block btn-secondary' do %>
    <i class="icon-github"></i>&nbsp; Github
  <% end %>
  <%= link_to social_login_url(provider: 'facebook', url: request.original_url), :class => 'btn btn-large btn-block btn-primary' do %>
    <i class="icon-facebook"></i>&nbsp; Facebook
  <% end %>
  <%= link_to social_login_url(provider: 'twitter', url: request.original_url), :class => 'btn btn-large btn-block btn-info' do %>
    <i class="icon-twitter"></i>&nbsp; Twitter
  <% end %>
</p>
